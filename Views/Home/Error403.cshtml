@{
    ViewData["Title"] = "Access Denied";
}
<div class="text-center">
    <h1 class="display-1 text-warning">403</h1>
    <h2 class="text-danger">Forbidden Access</h2>
    <p class="lead">You do not have the required permissions to access this resource.</p>
    <div class="alert alert-warning">
        This attempt has been logged for security purposes.
    </div>
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Go Back</a>
</div>