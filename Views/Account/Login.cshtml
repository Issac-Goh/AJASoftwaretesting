@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    @inject IConfiguration Configuration
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h2 class="mb-0">Member Login</h2>
            </div>
            <div class="card-body">
                <form asp-action="Login" method="post" id="loginForm">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" type="email"
                               autofocus autocomplete="email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" type="password"
                               autocomplete="current-password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                        <label asp-for="RememberMe" class="form-check-label"></label>
                    </div>

                    <input type="hidden" asp-for="RecaptchaToken" id="recaptchaToken" />

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">Login</button>
                    </div>

                    <hr />

                    <div class="mb-3 text-end">
                        <a asp-action="ForgotPassword" asp-controller="Account" class="text-decoration-none small">Forgot Password?</a>
                    </div>

                    <div class="text-center">
                        Don't have an account? <a asp-action="Register">Register here</a>
                    </div>
                </form>
            </div>
        </div>

        <div class="alert alert-info mt-3">
            <strong>Security Notice:</strong>
            <ul class="mb-0">
                <li>Your account will be locked for 15 minutes after 3 failed login attempts</li>
                <li>Session timeout: 20 minutes of inactivity</li>
            </ul>
        </div>
    </div>
</div>

@section Scripts {
    <script>
                document.getElementById('loginForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const form = this;

            grecaptcha.ready(function() {
                grecaptcha.execute('@Configuration["ReCaptcha:SiteKey"]', {action: 'login'}).then(function(token) {
                    document.getElementById('recaptchaToken').value = token;
                    // Use form.submit() specifically to bypass the listener loop
                    form.submit();
                });
            });
        });
    </script>
}
