@model string
@{
    ViewData["Title"] = "Email Verification";
}

<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card shadow mt-5">
            <div class="card-header bg-primary text-white text-center">
                <h3 class="mb-0"><i class="bi bi-shield-check"></i> Two-Factor Authentication</h3>
            </div>
            <div class="card-body p-4">
                <div class="text-center mb-4">
                    <p class="text-muted">
                        A 6-digit verification code has been sent to your registered email address.
                        Please enter it below to complete your login.
                    </p>
                </div>

                <form asp-action="Verify2FA" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-4">
                        <label for="code" class="form-label fw-bold">Verification Code</label>
                        <input type="text" name="code" id="code"
                               class="form-control form-control-lg text-center letter-spacing-lg"
                               placeholder="000000" maxlength="6" required autofocus />
                        <span class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">Verify & Login</button>
                    </div>
                </form>

                <hr />

                <div class="text-center small">
                    <p class="mb-1">Didn't receive the email?</p>
                    <a href="@Url.Action("Login", "Account")" class="text-decoration-none">Try logging in again</a>
                    <span class="mx-1">|</span>
                    <span class="text-muted">Check your spam folder</span>
                </div>
            </div>
        </div>

        <div class="alert alert-info mt-3 small">
            <i class="bi bi-info-circle"></i>
            <strong>Note:</strong> For security purposes, this code is only valid for 5 minutes.
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .letter-spacing-lg {
            letter-spacing: 0.5rem;
            font-size: 1.5rem;
            font-weight: bold;
        }
    </style>
}